{ 
  "cosmos-installer": {
    "form": [
      {
        "name": "oidc",
        "label": "Do you want to login with your Cosmos Login using the OpenID-Feature?",
        "initialValue": false,
        "type": "checkbox"
      },
      {if Context.oidc}
      {
        "type": "info",
        "label": "Please go to the OpenID Page in Cosmos and create an OpenID with Client-ID {Context.oidcClientId} and Redirect: https://{Hostnames.{StaticServiceName}.{StaticServiceName}.host}/auth/openid/callback"
      },
      {
        "name": "oidcClientId",
        "label": "Your OpenID Client-ID",
        "initialValue": "homeassistant",
        "type": "text"
      },
      {
        "name": "oidcClientSecret",
        "label": "Your OpenID Client-Secret (Copied from the OpenID Page in Cosmos)",
        "initialValue": "",
        "type": "text"
      },
      {/if}
      {
        "name": "adminOnly",
        "label": "Do you want to make this service admin only?",
        "initialValue": false,
        "type": "checkbox"
      }
    ],
    "translation": {
      "de": {
        "form.adminOnly.label": "Möchten Sie diesen Dienst nur für Administratoren zugänglich machen?",
        "routes.{ServiceName}.description": "{ServiceName} im Netzwerk veröffentlichen"
      }
    }
  },
  "minVersion": "0.16.0",
  "services": {
    "{ServiceName}": {
      "image": "lscr.io/linuxserver/homeassistant:latest",
      "container_name": "{ServiceName}",
      "restart": "unless-stopped",
      "UID": 1000,
      "GID": 1000,
      "security_opt": [
        "no-new-privileges:true"
      ],
      "environment": [
        "PUID=1000",
        "PGID=1000",
        "TZ=auto",
        "PROXY_HOSTNAME=0.0.0.0/0",
        "DOCKER_MODS=linuxserver/mods:homeassistant-hacs|aseracorp/docker-mods:homeassistant-trustedproxy{if Context.oidc}
        |aseracorp/docker-mods:homeassistant-oidc",
        "OIDC_CLIENT_ID={Context.oidcClientId}",
        "OIDC_CLIENT_SECRET={Context.oidcClientSecret}",
        "OIDC_CONFIGURE_URL=https://{Hostnames.{StaticServiceName}.{StaticServiceName}.host}/.well-known/openid-configuration",
        "OIDC_USERNAME_FIELD=sub",
        "OIDC_SCOPE=openid",
        "OIDC_BLOCK_LOGIN=false",
        "OIDC_OPENID_TEXT=Cosmos-Login",
        "OIDC_CREATE_USER=true
        {/if}"
      ],
      "labels": {
        "cosmos-force-network-secured": "true",
        "cosmos-auto-update": "true",
        "cosmos-icon": "https://aseracorp.github.io/resiSTORE/servapps/HomeAssistant/icon.png",
        "cosmos-stack": "{ServiceName}",
        "cosmos-stack-main": "{ServiceName}"
      },
      "volumes": [
        {
          "source": "{ServiceName}-config",
          "target": "/config",
          "type": "volume"
        }
      ],
      "routes": [
        {
          "name": "{ServiceName}",
          "description": "Expose {ServiceName} to the web",
          "useHost": true,
          "target": "http://{ServiceName}:8123",
          "mode": "SERVAPP",
          "Timeout": 14400000,
          "ThrottlePerMinute": 12000,
          "BlockCommonBots": true,
          "SmartShield": {
            "Enabled": true
          },
          "AuthEnabled": true
          {if Context.adminOnly}
           , "AuthAdmin": true
          {/if}
        }
      ]
    }
  }
}