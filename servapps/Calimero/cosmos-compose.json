{
  "cosmos-installer": {
    "form": [
      {
        "name": "knxAddress",
        "label": "KNX-Address of your IP-Router",
        "initialValue": "7.1.0",
        "type": "text"
      }
    ],
    "translation": {
      "de": {
        "form.knxAddress.label": "KNX-Addresse Ihres IP-Routers"
      }
    }
  },
  "services": {
    "{ServiceName}": {
      "image": "calimeroproject/knxserver:latest",
      "container_name": "{ServiceName}",
      "restart": "unless-stopped",
      "UID": 1000,
      "GID": 1000,
      "security_opt": [
        "no-new-privileges:true"
      ],
      "network_mode": "host",
      "labels": {
        "cosmos-force-network-secured": "true",
        "cosmos-auto-update": "true",
        "cosmos-icon": "https://aseracorp.github.io/resiSTORE/servapps/Calimero/icon.png"
      },
      "environment": [
        "KNX_ADDRESS={Context.knxAddress}"
      ],
      "entrypoints" : ["/bin/sh", "-c", "wget -O /usr/app/docker-entrypoint.sh http://aseracorp.github.io/resiSTORE/servapps/Calimero/artefacts/docker-entrypoint.sh && chmod +x /usr/app/docker-entrypoint.sh && /usr/app/docker-entrypoint.sh"],
      "commands": ["/usr/app/calimero-server-3.0-SNAPSHOT/bin/calimero-server", "--no-stdin", "server-config.xml"],
      "devices": [
        "/dev/ttyACM1:/dev/ttyACM1:rwm"
      ],
      "volumes": [
        {
          "source": "{ServiceName}-app",
          "target": "/usr/app",
          "type": "volume"
        }
      ]
    }
  }
}