{
  "cosmos-installer": {
    "form": [
      {
        "name": "baudrate",
        "label": "Baudrate",
        "initialValue": "9600",
        "type": "text"
      },
      {
        "name": "mode",
        "label": "Mode",
        "initialValue": "8N1",
        "type": "text"
      }
    ],
    "translation": {
      "de": {
        "form.baudrate.label": "Baudrate",
        "form.mode.label": "Modus"
      }
    }
  },
  "services": {
    "{ServiceName}": {
      "image": "3cky/mbusd:latest",
      "container_name": "{ServiceName}",
      "restart": "unless-stopped",
      "UID": 1000,
      "GID": 1000,
      "security_opt": [
        "no-new-privileges:true"
      ],
      "network_mode": "host",
      "labels": {
        "cosmos-force-network-secured": "true",
        "cosmos-auto-update": "true",
        "cosmos-icon": "https://aseracorp.github.io/resiSTORE/servapps/mbusd/icon.png"
      },
      "entrypoint": "/usr/bin/mbusd -d -L - -p /dev/ttyS0 -s {Context.baudrate} -m {Context.mode}",
      "devices": [
        "/dev/ttyACM0:/dev/ttyS0:rwm"
      ],
      "volumes": [
        {
          "source": "{ServiceName}-app",
          "target": "/usr/app",
          "type": "volume"
        }
      ]
    }
  }
}